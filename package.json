{
  "private": true,
  "name": "siteleaf-bootstrap",
  "scripts": {
    "setup": "yarn install && gem install bundler && bundle install && mkdir -p assets && mkdir -p assets/css && mkdir -p assets/fonts && mkdir -p assets/img && mkdir -p assets/js && mkdir -p source/img && mkdir -p source/img/icons && mkdir -p reports",
    "icons": "svgo -f source/img/icons && mkdir -p assets/img && svg-sprite-generate -d source/img/icons -o assets/img/icons.svg",
    "postcss": "postcss -c postcss.config.js -m -r assets/css/*.css",
    "scss": "node-sass --source-map true --output-style compressed -o assets/css source/scss",
    "build:css": "yarn scss && yarn postcss",
    "build:img": "yarn icons",
    "build:js": "webpack",
    "build:site": "bundle exec jekyll build",
    "build:site:dev": "JEKYLL_ENV=development bundle exec jekyll build --config '_config.yml'",
    "build:site:qa": "JEKYLL_ENV=staging bundle exec jekyll build --config '_config.yml,_config_qa.yml'",
    "build:styleguide": "yarn kss --source source/scss --destination styleguide --css ../assets/css/kss/styleguide.css --builder source/scss/kss/builder --title 'FK Siteleaf Bootstrap'",
    "build:test:all": "yarn mocha test/screenshots-golden/grab-all.js --timeout 5000",
    "build": "yarn build:css && yarn build:js && yarn build:site",
    "build:dev": "yarn build:css && yarn build:js && yarn build:site:dev",
    "build:qa": "yarn build:css && yarn build:js && yarn build:site:qa",
    "test:accessibility": "mkdir -p reports && yarn lighthouse $npm_config_url --view --output-path=./reports/lighthouse-results.report.html --chrome-flags='--headless, --ignore-certificate-errors'",
    "test:ui": "yarn mocha test/ --timeout 5000",
    "watch:css": "onchange 'source/scss/**/*.scss' -o 'stylelint {{changed}} && yarn build:css'",
    "watch:js": "webpack -w",
    "serve": "JEKYLL_ENV=development bundle exec jekyll serve --watch -I --config '_config.yml'",
    "start": "yarn build:dev && parallelshell 'yarn watch:css' 'yarn watch:js' 'yarn serve'"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "eslint": "^4.18.2",
    "eslint-config-google": "^0.9.1",
    "eslint-loader": "^2.0.0",
    "kss": "^3.0.0-beta.18",
    "lighthouse": "^2.9.1",
    "mocha": "^5.0.4",
    "node-sass": "^4.7.2",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.2",
    "pixelmatch": "^4.0.2",
    "postcss-cli": "^5.0.0",
    "postcss-normalize": "^4.0.0",
    "puppeteer": "^1.1.1",
    "stylelint": "^9.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.3",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^1.0.3",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "plyr": "^3.3.22"
  }
}
