{
  "plugins": ["react"], // React
  "extends": [
    "google",
    "plugin:react/recommended" // React, only
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true // React, only
    }
  },
  "rules": {
    "require-jsdoc": [
      0,
      {
        "require": {
          "FunctionDeclaration": true
        }
      }
    ],
    "generator-star-spacing": 0,
    "no-alert": 0,
    "indent": [0, 2],
    "camelcase": 1,
    "object-curly-spacing": [0, "never"],
    "arrow-parens": [0, "always"],
    "comma-dangle": [1, "always-multiline"],
    "quotes": [0, "single"],
    "jsx-quotes": [0, "prefer-double"],
    "no-negated-condition": [1],
    "new-cap": [1],
    "no-invalid-this": 0,
    "max-len": [
      0,
      {
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
        "ignorePattern": true
      }
    ],
    "react/prefer-es6-class": [1, "always"] // React, only
  },
  "globals": {
    "__DEV__": false,
    "alert": false,
    "navigator": false,
    "document": false,
    "describe": false,
    "it": false,
    "expect": false,
    "FormData": false,
    "window": false
  }
}
